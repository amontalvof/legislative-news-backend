{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./types"],
        "types": ["node", "express"]
    },
    "include": ["src/**/*"]
}
